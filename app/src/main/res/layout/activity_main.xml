<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/addgift_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="view_add_gifts"
        android:text="@string/add_gifts_activity"
        android:textColor="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/purchasedgift_activity_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/purchasedgift_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="view_purchased_gifts"
        android:text="@string/purchased_gifts_activity"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/viewgifts_activity_button"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toEndOf="@+id/addgift_activity_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/viewgifts_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="view_view_gifts"
        android:text="@string/view_gifts_activity"
        android:textColor="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/purchasedgift_activity_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/motd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:text="@string/motd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>